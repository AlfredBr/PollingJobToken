{
  "$schema": "http://json.schemastore.org/template",
  "author": "Alfred Broderick (https://www.alfredbr.dev)",
  "classifications": [ "Web", "WebAPI", "API", "Service", "Polling", "Async", "LRO" ],
  "identity": "AlfredBr.Templates.PollingJobTokenApi",
  "name": "Polling Job Token Web API",
  "description": "A .NET Web API template implementing token-based polling pattern for long-running operations (LROs)",
  "shortName": "webapi-polling",
  "sourceName": "PollingJobToken",
  "preferNameDirectory": true,
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "symbols": {
    "RootNamespace": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "Company.Product.Service",
      "description": "The root namespace for the generated project"
    },
    "ServiceGuid": {
      "type": "generated",
      "generator": "guid",
      "replaces": "SERVICE-GUID-PLACEHOLDER"
    },
    "TargetFramework": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net10.0",
          "description": ".NET 10"
        },
        {
          "choice": "net9.0",
          "description": ".NET 9"
        },
        {
          "choice": "net8.0",
          "description": ".NET 8 LTS"
        }
      ],
      "defaultValue": "net10.0",
      "description": "The target framework for the project"
    },
    "EnableApiDocs": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Enable API documentation (OpenAPI/Scalar)"
    },
    "IncludeSampleJobs": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Include sample job implementations (Weather and Lottery)"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(!IncludeSampleJobs)",
          "exclude": [
            "AppControllers/**",
            "AppModels/**",
            "AppServices/**",
            "AppScripts/**"
          ]
        }
      ]
    }
  ]
}
